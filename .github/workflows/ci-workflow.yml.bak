name: Pull Request Continuous Integration Workflow
# This workflow is triggered in Pull Requests
on: [push, pull_request]

# Filter which push events trigger this workflow
#push:
#  branches:
#    - master # run workflow on any pushes to the master branch

jobs:
  ci_go:
    name: CI for Go pkg
    runs-on: ubuntu-18.04
    steps:
      - name: Check out code
        uses: actions/checkout@${GITHUB_SHA}
      - name: Setup Go 1.11
          uses: actions/setup-go@v1.0.0
          with:
            version: 1.11
          id: go
      - name: Run the Go tests
        run: go test -v -race -p 4 pkgs/go/...
